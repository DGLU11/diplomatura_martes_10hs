<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una Obra</h4>

            {{#if error}}
                <div class="alert alert-danger" role="alert">
                    {{message}}
                </div>
            {{/if}}

            <form action="/admin/novedades/agregar" method="post"> 
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Título" name="titulo" required>
                </div>

                <div class="mb-3">
                    <textarea class="form-control" placeholder="Subtítulo" name="subtitulo"  required></textarea>
                </div> 

                <div class="mb-3">
                    <textarea class="form-control" placeholder="Cuerpo" name="cuerpo"  required></textarea>
                </div>   

                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>  
    </div>
</div>


          