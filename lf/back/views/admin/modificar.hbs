       <div class="container" style="margin-top: 50px;">
  <div class="row">
    <div class="col-6 offset-3">
      <h4>Modificar la obra</h4>

        <form method="post" action="/admin/novedades/modificar"> 
        <input type="hidden" value="{{novedad.id}}" name="id">

 <div class="form-group">      
<textarea class="form-control" name="titulo" 
placeholder="Título">{{novedad.titulo}}</textarea>

</div>
<div class="form-group">
          <textarea class="form-control" name="subtitulo"  
          placeholder="Subtítulo">{{novedad.subtitulo}}</textarea>
        </div>

 <div class="form-group">
           <textarea class="form-control" name="cuerpo" 
            placeholder="Cuerpo">{{novedad.cuerpo}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Modificar</button>
   </form>
        </div>
</div>
</div>

{{#if error}}
<h5>No se puedo realizar la modificacion</h5>
{{/if}}

        

         
            