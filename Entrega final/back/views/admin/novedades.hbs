<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col">
            <p class="text-end">
                Hola {{persona}}!
                <a class="btn btn-danger" href="/admin/login/logout">
                    Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i>
                </a>
            </p>
        </div>
    </div>

       <div class="row">
        <div class="col-7">
            <h3>Listado de Obras</h3>
        </div>

            <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/novedades/agregar">
                <i class="fa fa-plus" aria-hidden="true"></i> Nuevo
            </a>
        </div>
    </div>

     <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Obras</th>
                        <th scope="col">Imagen</th>
                        <th class="text-center" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{nombredelaobra}}</td>
                          <td>{{{imagen}}}</td>
                            
                         <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-sm btn-secondary">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>